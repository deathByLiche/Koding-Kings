<Window x:Class="TriviaMaze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trivia Maze" Height="550" Width="750" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="titleScreen" HorizontalAlignment="Left" Height="522" VerticalAlignment="Top" Width="744">
            <Button x:Name="playButton" Content="Play" Canvas.Left="320" Canvas.Top="313" Width="75" Click="playButton_Click"/>
        </Canvas>
        <Canvas x:Name="gameScreen" HorizontalAlignment="Left" Height="522" VerticalAlignment="Top" Width="744">
            <Button x:Name="doneButton" Content="Done" Canvas.Left="321" Canvas.Top="313" Width="75" Click="doneButton_Click"/>
        </Canvas>
    </Grid>
</Window>
